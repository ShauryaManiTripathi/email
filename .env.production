# Production Environment Configuration

# Server Configuration
PORT=4000
NODE_ENV=production
LOG_LEVEL=info
CORS_ORIGIN=https://demo-email.shaurya.codes

# Email Service Configuration
MAX_RETRIES=3
INITIAL_RETRY_DELAY=1000
MAX_RETRY_DELAY=30000
RETRY_MULTIPLIER=2

# Provider Configuration
PRIMARY_SUCCESS_RATE=0.6
PRIMARY_MIN_LATENCY=200
PRIMARY_MAX_LATENCY=800

SECONDARY_SUCCESS_RATE=0.6
SECONDARY_MIN_LATENCY=300
SECONDARY_MAX_LATENCY=1200

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=40
RATE_LIMIT_CLEANUP_INTERVAL=300000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_SUCCESS_THRESHOLD=2
CIRCUIT_BREAKER_TIMEOUT=30000
ENABLE_CIRCUIT_BREAKER=true

# Queue Configuration
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=5000
QUEUE_MAX_CONCURRENCY=5
QUEUE_PROCESS_INTERVAL=1000
ENABLE_QUEUE=true
ENABLE_RATE_LIMIT=true

# Idempotency Configuration
IDEMPOTENCY_TTL=86400000
CLEANUP_INTERVAL=3600000
